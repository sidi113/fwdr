<odoo>
  <data>
    <!-- tree view: City -->    
    <record model="ir.ui.view" id="city_tree">
      <field name="name">City</field>
      <field name="model">res.city</field>
      <field name="arch" type="xml">
        <tree delete="false" editable="top" default_order="country_id state_id county_id name desc">
          <field name="name"/>          
          <field name="country_id"/>         
          <field name="state_id" />
          <field name="county_id" />
          <field name="zipcode" />
          <field name="unlocode"/>
          <field name="active" />
        </tree>
      </field>
    </record>
    
    <!-- form view: City -->    
    <record model="ir.ui.view" id="city_form">
      <field name="name">City</field>
      <field name="model">res.city</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <group>
              <field name="name"/> 
              <field name="county_id" options='{"no_open": True}'/>         
              <field name="state_id" options='{"no_open": True}'/>
              <field name="country_id" options='{"no_open": True}'/>       
            </group>
            <group>              
              <field name="zipcode" />
              <field name="unlocode"/>
              <field name="active" />
            </group>
          </group>
        </form>
      </field>
    </record>

    <!-- actions: city -->    
    <record model="ir.actions.act_window" id="city_action">
      <field name="name">City</field>
      <field name="res_model">res.city</field>
      <field name="view_mode">tree</field>
    </record>

